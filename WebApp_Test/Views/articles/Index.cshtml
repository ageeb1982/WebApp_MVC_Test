@Html.Partial("_UpX")



@*$("#srch").autocomplete(source: 'Url.Action("Srch_Name")' );
    $("#srch").autocomplete({ source: '/Articles/Srch_Name' } );
*@
<script>
    $(document).ready(function () {
        $("#srch").autocomplete({ source: '@Url.Action("Srch_Name")' });
    });

     




</script>




@using (Html.BeginForm())
{
    <b>Search By Name</b>
    @Html.TextBox("srch", "", new { id = "srch" })
    <input type="submit" value="Search" />
}



<p>
    @Html.ActionLink("New Article", "Create")
</p>


<table id="T1" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddTime)
            </th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>

@Html.Partial("_DownX")

 
   
